#!/usr/bin/env sh
set -e
HERE="$(cd "$(dirname "$0")" && pwd -P)"
JAVA_CMD=${JAVA_HOME:+$JAVA_HOME/bin/java}
if [ -z "$JAVA_CMD" ]; then
  JAVA_CMD=java
fi
JAR="$HERE/gradle/wrapper/gradle-wrapper.jar"
if [ ! -f "$JAR" ]; then
  echo "gradle-wrapper.jar not found in $HERE/gradle/wrapper"
  echo "Please run 'gradle wrapper' locally or allow this script to download the wrapper jar."
  exit 1
fi
exec "$JAVA_CMD" -jar "$JAR" "$@"
